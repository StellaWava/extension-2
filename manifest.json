{
  "manifest_version": 3,
  "name": "Course Compare",
  "version": "1.0.0",
  "description": "Save and compare university programs as you browse",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Course Compare",
    "default_icon": {
      "16": "images/gai.png"
    }
  },
  "icons": {
    "16": "images/gai.png"
  }
}