{
  "manifest_version": 3,
  "name": "Course Compare",
  "version": "1.0.0",
  "description": "Save and compare university programs as you browse",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.edu/*",
    "https://*.ac.uk/*",
    "https://*.ca/*",
    "https://*.eu/*",
    "https://*.za/*",
    "https://*.ke/*",
    "https://*.ng/*",
    "https://*.ug/*",
    "https://*.gh/*"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.edu/*",
        "https://*.ac.uk/*",
        "https://*.ca/*",
        "https://*.eu/*",
        "https://*.za/*",
        "https://*.ke/*",
        "https://*.ng/*",
        "https://*.ug/*",
        "https://*.gh/*"
      ],
      "js": ["dist/content-script.js"],
      "css": ["dist/popup/popup.css"],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ],
  "minimum_chrome_version": "92",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src *;"
  },
  "sandbox": {
    "pages": ["popup/popup.html"]
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Course Compare",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/16.png",
      "48": "icons/16.png",
      "128": "icons/16.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/16.png",
    "48": "icons/16.png",
    "128": "icons/16.png"
  }
}
