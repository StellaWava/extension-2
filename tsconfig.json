{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2020",
      "moduleResolution": "node",
      "lib": ["ES2020", "DOM"],
      "outDir": "dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": false,
      "removeComments": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*"
, "types"    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }

  